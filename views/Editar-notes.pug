extends ./main.pug
block content

        .col-md-4.mx-auto.dark
            .card
                .card-header.bg-dark.text-center
                    h3.text-white  Edit Progress
                .card-body
                    form(action='/notes/edit-note/'+note._id+''+'?_method=PUT' method="POST")
                        input(type='hidden' name='_method' value='PUT')
                        .mb-3
                            input.form-control(type='text' name='title' value= note.title)
                        .mb-3
                            input.form-control(type='date', name='date' value = note.date) 
                        .mb-3
                            input.form-control(name='description' type='text' value= note.description) 
                        .mb-3
                            input.form-control(name='Peso' value = note.Peso)
                        button.btn.btn-primary.w-100(type='submit')
                            | Save
